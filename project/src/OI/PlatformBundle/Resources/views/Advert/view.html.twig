{% extends "OIPlatformBundle::layout.html.twig" %}

{% block title %} Affichage d'une annonce - {{parent()}} {% endblock %}

{% block oiplatform_body %}
  <h2>{{ advert.title }}</h2>
  {% if advert.image is not null %}
    <img style="width:200px"
      src="{{ advert.image.url }}" alt="{{ advert.image.alt }}">
  {% endif %}
  <em>Par {{ advert.author }}, le {{ advert.date | date('d/m/Y')}}</em>

  <div>{{ advert.content }}</div>

  {% if advert.categories is not empty %}
    <p>
      Cette annonce est parue dans les catégories suivantes:
      {% for category in advert.categories %}
        {{ category.name }} {% if not loop.last %}, {% endif %}
      {% endfor %}
    </p>
  {% endif %}

  <p>
    <a href="{{ path('oi_platform_home') }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour à la liste
    </a>
    <a href="{{ path('oi_platform_edit', {'id':advert.id})}}" class="btn btn-default">
      <i class="glyphicon glyphicon-edit"></i>
      Modifier l'annonce
    </a>
    <a href="{{ path('oi_platform_delete', {'id':advert.id})}}" class="btn btn-danger">
      <i class="glyphicon glyphicon-trash"></i>
      Supprimer l'annonce
    </a>
  </p>


{% endblock %}
