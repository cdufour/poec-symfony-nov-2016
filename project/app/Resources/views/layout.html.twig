{# app/ #}
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}OI Plaforme{% endblock %}</title>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    {% block stylesheets %}{% endblock %}
  </head>
  <body>
    <div class="container">
      <div id="header" class="jumbotron">
        <h1>Plateforme d'annonces</h1>
        <p>Projet réalisé avec le framework PHP Symfony</p>
      </div>

      <div class="row">
        <div id="menu" class="col-md-3">
          <h3>Les annonces</h3>
          <ul class="nav nav-pills nav-stacked">
            <li><a href="{{ path('oi_platform_home') }}">Accueil</a></li>
            <li><a href="{{ path('oi_platform_add') }}">Ajouter une annonce</a></li>
          </ul>

          <h4>Dernières annonces</h4>
          <!-- todo: charger ici les trois dernières annonces -->
        </div>
        <div id="content" class="col-md-9">
          {% block body %}
          {% endblock %}
        </div>
      </div>

      <hr>

      <footer>Opus Idea - Tous droits réservés</footer>

    </div> <!-- fin container -->
    {% block javascripts %}

    {% endblock %}

  </body>
</html>
